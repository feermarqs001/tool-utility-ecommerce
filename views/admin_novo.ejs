<body>
  <h1>Novo Produto</h1>
  <form method="POST" action="/admin/criar">
    <label>Nome: <input type="text" name="name" required></label><br>
    <label>Descrição: <textarea name="description" required></textarea></label><br>
    <label>Preço (R$): <input type="number" step="0.01" name="price" required></label><br>
    <label>Imagem (URL): <input type="text" name="image" required></label><br>
    <label>Categoria: <input type="text" name="category"></label><br>
    <label>Estoque: <input type="number" name="stock" value="1" min="0" required></label><br>
    <button type="submit">Salvar</button>
  </form>
